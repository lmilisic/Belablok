<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Belablok" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">#FFFFFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="titleTextColor">#000000</item>
        <item name="subtitleTextColor">#000000</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Actionbar</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFFFFF</item>
        <item name="colorSecondaryVariant">#FFFFFF</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ThemeOverlay.Actionbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="android:textColorPrimary">#000000</item>
        <item name="colorPrimary">#FFFFFF</item>
    </style>

    <style name="Theme.Belablok.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Belablok.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Belablok.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>